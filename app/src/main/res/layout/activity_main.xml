<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ContadorNumerico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.336" />

    <Button
        android:id="@+id/BotonClick"
        android:layout_width="226dp"
        android:layout_height="124dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="148dp"
        android:text="Click"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContadorNumerico" />

    <TextView
        android:id="@+id/CountDown"
        android:layout_width="58dp"
        android:layout_height="135dp"
        android:layout_marginStart="172dp"
        android:layout_marginBottom="56dp"
        android:text="0"
        android:textSize="100dp"
        app:layout_constraintBottom_toTopOf="@+id/ContadorNumerico"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ButonReset"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="56dp"
        android:text="Reset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotonClick" />

</androidx.constraintlayout.widget.ConstraintLayout>